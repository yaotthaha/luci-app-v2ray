{
	"luci-app-xray": {
		"description": "Grant access for luci-app-xray",
		"read": {
			"file": {
				"/etc/firewall.xray": ["read"],
				"/etc/xray/*": ["read"]
			},
			"uci": ["dhcp", "firewall", "xray"]
		},
		"write": {
			"file": {
				"/etc/xray/*": ["write"],
				"/etc/init.d/firewall": ["exec"],
				"/etc/init.d/xray": ["exec"]
			},
			"uci": ["dhcp", "firewall", "xray"]
		}
	}
}
